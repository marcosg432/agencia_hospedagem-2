generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env(DATABASE_URL)
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  senha     String
  nome      String
  role      String   @default("colaborador") // admin | colaborador
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Hospedagem {
  id            Int      @id @default(autoincrement())
  nome          String
  endereco      String
  telefone      String
  whatsapp      String
  capacidadeMax Int
  fotos         String[] // Array de URLs
  descricao     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Reserva {
  id          Int      @id @default(autoincrement())
  nome        String
  telefone    String
  qtdPessoas Int
  checkIn     DateTime
  checkOut    DateTime
  valorTotal  Float
  status      String   @default("pendente") // pendente | confirmada | cancelada
  quarto      String   @default("Quarto 1") // Nome do quarto
  observacoes String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Bloqueio {
  id        Int      @id @default(autoincrement())
  data      DateTime @unique
  motivo    String   @default("limpeza") // limpeza | manutencao | outro
  createdAt DateTime @default(now())
}

model Preco {
  id          Int      @id @default(autoincrement())
  tipo        String   @unique // comum | fim_semana | especial
  valor       Float
  descricao   String?
  dataEspecial DateTime? // Para pre√ßos especiais (feriados)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

